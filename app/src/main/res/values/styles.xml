<resources>

    <style name="IslandCompanionTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorOnSecondary">@color/primaryTextColor</item>
        <item name="colorOnSurface">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:navigationBarColor">@color/primaryDarkColor</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.IslandCompanionTheme.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.IslandCompanionTheme.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.IslandCompanionTheme.LargeComponent</item>
        <item name="chipStyle">@style/IslandCompanionTheme.Chip.Entry</item>
    </style>

    <style name="ShapeAppearance.IslandCompanionTheme.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.IslandCompanionTheme.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.IslandCompanionTheme.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">36dp</item>
    </style>

    <style name="IslandCompanionTheme.Chip.Entry" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:textColor">@color/choice_chip_text_color</item>
        <item name="chipBackgroundColor">@color/choice_chip_background_color</item>
        <item name="android:checkable">false</item>
        <item name="closeIconEnabled">false</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

</resources>
